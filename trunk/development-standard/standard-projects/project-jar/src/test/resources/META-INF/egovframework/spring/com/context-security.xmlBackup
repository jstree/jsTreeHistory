<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd
http://www.springframework.org/schema/security
http://www.springframework.org/schema/security/spring-security.xsd">

	<security:global-method-security
		secured-annotations="enabled" pre-post-annotations="enabled" />

	<security:http pattern="/assets/**" security="none"></security:http>

	<security:http auto-config="true">
		<security:anonymous granted-authority="ROLE_ALL" />

		<security:intercept-url pattern="/community/**"
			access="hasRole('ROLE_USER')" />

		<security:form-login
			login-page="/egovframework/com/etc/jstree/support/manager/security/login.do"
			login-processing-url="/egovframework/com/etc/jstree/support/manager/security/loginProcess.do"
			authentication-success-handler-ref="customAuthenticationSuccessHandler"
			authentication-failure-handler-ref="customAuthenticationFailureHandler" />
		<security:logout invalidate-session="true" logout-success-url="/"
			logout-url="/egovframework/com/etc/jstree/support/manager/security/logout.do" />

		<security:access-denied-handler
			error-page="/error/404.do" />

		<security:session-management
			session-authentication-error-url="/error/404.do"
			invalid-session-url="/egovframework/com/etc/jstree/support/manager/security/login.do"
			session-fixation-protection="none">
			<security:concurrency-control
				max-sessions="1" error-if-maximum-exceeded="true"
				expired-url="/egovframework/com/etc/jstree/support/manager/security/expire.do" />
		</security:session-management>
	</security:http>

	<security:authentication-manager alias="authenticationManager">
		<security:authentication-provider
			user-service-ref="customUserDetailService">
			<security:password-encoder hash="sha-256"></security:password-encoder>
		</security:authentication-provider>
	</security:authentication-manager>



	<bean id="customUserDetailService"
		class="egovframework.com.ext.jstree.support.manager.security.CustomUserDetailsService" />
	<bean id="customAuthenticationSuccessHandler"
		class="egovframework.com.ext.jstree.support.manager.security.CustomAuthenticationSuccessHandler">
		<property name="targetUrlParameter" value="spring-security-redirect" />
		<property name="defaultTargetUrl"
			value="/egovframework/com/etc/jstree/support/manager/security/loginSuccess.do" />
		<property name="alwaysUseDefaultTargetUrl" value="true" />
	</bean>

	<bean id="loggerListener"
		class="egovframework.com.ext.jstree.support.manager.security.CustomLoginLogger" />
	<bean id="customAuthenticationFailureHandler"
		class="egovframework.com.ext.jstree.support.manager.security.CustomAuthenticationFailureHandler">
		<property name="memberManager" ref="memberManager"></property>
		<property name="defaultFailureUrl"
			value="/egovframework/com/etc/jstree/support/manager/security/loginFail.do"></property>
	</bean>
</beans>