	{% comment %} Code Block {% endcomment %}

		{% comment %} Animate {% endcomment %}
					
			{% include 'animations' with 'page' %}
			{% include 'animations' with 'extras' %}


	{% comment %} Order {% endcomment %}

		<main id="template-customer-order-liquid" class="clearfix" role="main">

			{% comment %} Breadcrumb {% endcomment %}

				<nav>
					<div class="container bm-medium">
						<div class="one-whole">
							{% include 'breadcrumb' %}
						</div>
					</div>
				</nav>


			{% comment %} Order {% endcomment %}

				<div class="container bm-medium">

					{% comment %} Cancelled {% endcomment %}

						{% if order.cancelled %}
							<div class="one-whole boxed {{ settings.grid_boxed_padding }} {{ page_animate }} clearfix" data-anim-type="{{ page_animation_type }}" data-anim-delay="{{ page_animation_delay }}">
								<h1>Order Cancelled</h1>
								<hr />

								<p>This order was cancled{% if order.cancelled_at %} on "{{ order.cancelled_at | date: "%B %d, %Y %I:%M%p" }}"{% endif %} for the following reason:</p>

								{{ order.cancel_reason }}
							</div>
						{% endif %}


					{% comment %} Date {% endcomment %}

						<div class="one-whole boxed {{ settings.grid_boxed_padding }} {{ page_animate }} clearfix" data-anim-type="{{ page_animation_type }}" data-anim-delay="{{ page_animation_delay }}">
							<h4 class="bm-larger tm-larger text-center">Order placed on<br />{{ order.created_at | date: "%B %d, %Y %I:%M%p" | replace: 'AM', 'am' | replace: 'PM', 'pm' }}</h4>
						</div>


					{% comment %} Items {% endcomment %}

						<div class="one-whole boxed {{ settings.grid_boxed_padding }} {{ page_animate }} clearfix" data-anim-type="{{ page_animation_type }}" data-anim-delay="{{ page_animation_delay }}">

							{% comment %} Items {% endcomment %}

								<div class="two-third-percent omega bm-remove tablet-mobile">
									{% for line_item in order.line_items %}
										<div class="one-whole-percent line-item-details {% cycle 'odd', 'even' %}{% if forloop.first %} loop-first{% endif %}{% if forloop.last %} loop-last bm-remove{% endif %}">
											<div class="clearfix">
												<a href="{{ line_item.product.url }}" target="_self" class="block float-left line-item-image-link">
													<img src="{{ line_item.product.featured_image.src | product_img_url: 'master' }}" />
												</a>

												<p class="bm-small">
													<a href="{{ line_item.product.url }}" target="_self">{{ line_item.quantity }} x {{ line_item.title }}</a><br />
													<small>{{ line_item.sku }}</small>
												</p>
												<p class="bm-small">{{ line_item.quantity | times: line_item.price | money }}</p>

												{% if line_item.fulfillment %}
													<small>
														<strong>Completed: </strong>{{ line_item.fulfillment.created_at | date: "%B %d, %Y %I:%M%p" }}

														{% if line_item.fulfillment.tracking_number %}
															<p class="bm-remove tm-small"><a href="{{ line_item.fulfillment.tracking_url }}" target="_self"><strong>{{ line_item.fulfillment.tracking_company }}: </strong>#{{ line_item.fulfillment.tracking_number}}</a></p>
														{% endif %}
													</small>
												{% endif %}
											</div>
										</div>

										<hr class="line-item-separator" />
									{% endfor %}
								</div>

							{% comment %} Total {% endcomment %}

								<div class="one-third-percent alpha tablet-mobile last">
									<div id="line-item-totals">
										<h5 class="bm-small no-color">Subtotal: {{ order.subtotal_price | money }}</h3>

										{% for discount in order.discounts %}
											<h5 class="bm-small no-color">"{{ discount.code }}" Discount: {{ discount.savings | money }}</h3>
										{% endfor %}

										{% for shipping_method in order.shipping_methods %}
											<h5 class="bm-small no-color">Shipping <small>({{ shipping_method.title }})</small>: {{ shipping_method.price | money }}</h3>
										{% endfor %}

										{% for tax_line in order.tax_lines %}
											<h5 class="no-color">Tax ({{ tax_line.title }} {{ tax_line.rate | times: 100 }}%): {{ tax_line.price | money }}</h3>
										{% endfor %}    
												
										<h2 class="bm-remove tm-large">Total: {{ order.total_price | money }} {{ order.currency }}</h2>
									</div>
								</div>

						</div>


					{% comment %} Billing Address {% endcomment %}

						<div id="billing-address" class="one-half boxed {{ settings.grid_boxed_padding }} {{ page_animate }} clearfix" data-anim-type="{{ page_animation_type }}" data-anim-delay="{{ page_animation_delay }}">
							<h3>Billing Address</h3>
							<hr />

							<p class="bm-small">
								<strong>
									{% if order.billing_address.company %}{{ order.billing_address.company }} <small>&nbsp;&bull;&nbsp;</small> {% endif %}
									{{ order.billing_address.name }}
								</strong>
							</p>

							<span class="font-small">
								<p>
									{{ order.billing_address.street }},
									{{ order.billing_address.city }}
									{% if order.billing_address.province %}
										{{ order.billing_address.province }},
									{% endif %}
									{{ order.billing_address.country }},
									{{ order.billing_address.zip }},
									{{ order.billing_address.phone }}
								</p>
							</span>

							{% if order.financial_status == 'paid' %}

								{% assign financial_button = 'success' %}
								{% assign financial_tooltip = 'Payment Complete' %}
								{% assign financial_text = 'Complete' %}

							{% elsif order.financial_status == 'partially_paid' %}

								{% assign financial_button = 'warning' %}
								{% assign financial_tooltip = 'Payment Partially Paid' %}
								{% assign financial_text = '#####' %}

							{% elsif order.financial_status == 'pending' %}

								{% assign financial_button = 'warning' %}
								{% assign financial_tooltip = 'Payment Pending' %}
								{% assign financial_text = 'Pending' %}

							{% elsif order.financial_status == 'authorized' %}

								{% assign financial_button = 'warning' %}
								{% assign financial_tooltip = 'Payment Authorized' %}
								{% assign financial_text = 'Authorized' %}

							{% elsif order.financial_status == 'abandoned' %}

								{% assign financial_button = 'error' %}
								{% assign financial_tooltip = 'Order Abandoned' %}
								{% assign financial_text = 'Abandoned' %}

							{% elsif order.financial_status == 'refunded' %}

								{% assign financial_button = 'error' %}
								{% assign financial_tooltip = 'Payment Refunded' %}
								{% assign financial_text = 'Refunded' %}

							{% elsif order.financial_status == 'partially_refunded' %}

								{% assign financial_button = 'error' %}
								{% assign financial_tooltip = 'Payment Partially Refunded' %}
								{% assign financial_text = '#####' %}

							{% elsif order.financial_status == 'voided' %}

								{% assign financial_button = 'neutral' %}
								{% assign financial_tooltip = 'Transaction Void' %}
								{% assign financial_text = 'Voided' %}

							{% endif %}

							<div class="text-right">
								<button type="button" class="bm-remove w-small h-small tip-t-fade text-uppercase status {{ financial_button }}" data-tooltip="{{ financial_tooltip }}" data-status="{{ order.financial_status }}">
									<span class="order-button-text">Payment:&nbsp;</span>{{ financial_text }}
								</button>
							</div>
						</div>


					{% comment %} Shipping Address {% endcomment %}

						{% if order.shipping_address %}
							<div id="shipping-address" class="one-half boxed {{ settings.grid_boxed_padding }} last {{ page_animate }} clearfix" data-anim-type="{{ page_animation_type }}" data-anim-delay="{{ page_animation_delay }}">
								<h3>Shipping Address</h3>
								<hr />

								<p class="bm-small">
									<strong>
										{% if order.shipping_address.company %}{{ order.shipping_address.company }} <small>&nbsp;&bull;&nbsp;</small> {% endif %}
										{{ order.shipping_address.name }}
									</strong>
								</p>

								{% if order.fulfillment_status == 'fulfilled' %}

									{% assign fulfillment_button = 'success' %}
									{% assign fulfillment_tooltip = 'All Items Dispatched' %}
									{% assign fulfillment_text = 'Complete' %}

								{% elsif order.fulfillment_status == 'partial' %}

									{% assign fulfillment_button = 'warning' %}
									{% assign fulfillment_tooltip = 'Some Items Dispatched' %}
									{% assign fulfillment_text = 'Processing' %}

								{% elsif order.fulfillment_status == 'unfulfilled' %}

									{% assign fulfillment_button = 'warning' %}
									{% assign fulfillment_tooltip = 'Preparing Items' %}
									{% assign fulfillment_text = 'Pending' %}

								{% elsif order.fulfillment_status == 'restocked' %}

									{% assign fulfillment_button = 'neutral' %}
									{% assign fulfillment_tooltip = 'Awaiting Stock' %}
									{% assign fulfillment_text = 'Voided' %}

								{% endif %}

								<span class="font-small">
									<p>
										{{ order.shipping_address.street }},
										{{ order.shipping_address.city }}
										{% if order.shipping_address.province %}
											{{ order.shipping_address.province }},
										{% endif %}
										{{ order.shipping_address.country }},
										{{ order.shipping_address.zip }},
										{{ order.shipping_address.phone }}
									</p>
								</span>

								<div class="text-right">
									<button type="button" class="bm-remove w-small h-small tip-t-fade text-uppercase status {{ fulfillment_button }}" data-tooltip="{{ fulfillment_tooltip }}" data-status="{{ order.fulfillment_status }}">
										<span class="order-button-text">Fulfilled:&nbsp;</span>{{ fulfillment_text }}
									</button>
								</div>
							</div>
						{% endif %}

				</div>

		</main>