	// Box Model
		@mixin box-model($type: border-box) {
			-moz-box-sizing: $type;
			-webkit-box-sizing: $type;
			box-sizing: $type;
		}

	// Dimensions
		@mixin dimensions($width: auto, $height: auto) {
			width: $width;
			height: $height;
		}

	// Position
		@mixin position-tl($position: relative, $top: auto, $left: auto) {
			position: $position;
			top: $top;
			left: $left;
		}

		@mixin position-tr($position: relative, $top: auto, $right: auto) {
			position: $position;
			top: $top;
			right: $right;
		}

		@mixin position-bl($position: relative, $bottom: auto, $left: auto) {
			position: $position;
			bottom: $bottom;
			left: $left;
		}

		@mixin position-br($position: relative, $bottom: auto, $right: auto) {
			position: $position;
			bottom: $bottom;
			right: $right;
		}

		@mixin position-zero() {
			position: absolute;
			top: 0;
			right: 0;
			bottom: 0;
			left: 0;
		}

	// Horizontally Align
		@mixin horizontally-align() {
			margin-left: auto;
			margin-right: auto;
			float: none;
		}

	// Vertically Align
		@mixin vertically-align-relative() {
			position: relative;
			top: 50%;
			-webkit-transform: translateY(-50%);
			-ms-transform: translateY(-50%);
			transform: translateY(-50%);
		}

		@mixin vertically-align-absolute() {
			position: absolute;
			top: 50%;
			-webkit-transform: translateY(-50%);
			-ms-transform: translateY(-50%);
			transform: translateY(-50%);
		}

	// Border Radius
		@mixin border-radius($rad: 5px) {
			-webkit-border-radius: $rad;
			-moz-border-radius: $rad;
			border-radius: $rad;
		}

		@mixin border-radius-each($top-left: 5px, $top-right: 5px, $bottom-right: 5x, $bottom-left: 5px) {
			-webkit-border-top-left-radius: $top-left;
			-webkit-border-top-right-radius: $top-right;
			-webkit-border-bottom-right-radius: $bottom-right;
			-webkit-border-bottom-left-radius: $bottom-left;
			-moz-border-top-left-radius: $top-left;
			-moz-border-top-right-radius: $top-right;
			-moz-border-bottom-right-radius: $bottom-right;
			-moz-border-bottom-left-radius: $bottom-left;
			border-top-left-radius: $top-left;
			border-top-right-radius: $top-right;
			border-bottom-right-radius: $bottom-right;
			border-bottom-left-radius: $bottom-left;
		}

	// Box Shadow
		@mixin box-shadow-alpha($x: 0, $y: 0, $blur: 5px, $spread: 0, $r: 0, $g: 0, $b: 0, $alpha: .3) {
			-webkit-box-shadow: $x $y $blur $spread rgba($r, $g, $b, $alpha);
			-moz-box-shadow: $x $y $blur $spread rgba($r, $g, $b, $alpha);
			box-shadow: $x $y $blur $spread rgba($r, $g, $b, $alpha);
		}

		@mixin box-shadow-hex($x: 0px, $y: 0px, $blur: 5px, $spread: 0, $hex: #000000) {
			-webkit-box-shadow: $x $y $blur $spread $hex;
			-moz-box-shadow: $x $y $blur $spread $hex;
			box-shadow: $x $y $blur $spread $hex;
		}

	// Text Shadow
		@mixin text-shadow-alpha($x: 1px, $y: 1px, $blur: 0, $r: 0, $g: 0, $b: 0, $alpha: 1) {
			text-shadow: $x $y $blur rgba($r, $g, $b, $alpha);
		}

		@mixin text-shadow-hex($x: 1px, $y: 1px, $blur: 0, $hex: #000) {
			text-shadow: $x $y $blur $hex;
		}

	// Gradients
		@mixin gradient-linear($origin: top, $from: #FFFFFF, $to: #000000) {
			background-image: -webkit-linear-gradient($origin, $from, $to);
			background-image: -moz-linear-gradient($origin, $from, $to);
			background-image: -o-linear-gradient($origin, $from, $to);
			background-image: -ms-linear-gradient($origin, $from, $to);
			background-image: linear-gradient($origin, $from, $to);
		}

		@mixin gradient-linear-alpha($origin: top, $from-r: 255, $from-g: 255, $from-b: 255, $from-a: 1, $to-r: 0, $to-g: 0, $to-b: 0, $to-a: 1) {
			background-image: -webkit-linear-gradient($origin, rgba($from-r, $from-g, $from-b, $from-a), rgba($to-r, $to-g, $to-b, $to-a));
			background-image: -moz-linear-gradient($origin, rgba($from-r, $from-g, $from-b, $from-a), rgba($to-r, $to-g, $to-b, $to-a));
			background-image: -o-linear-gradient($origin, rgba($from-r, $from-g, $from-b, $from-a), rgba($to-r, $to-g, $to-b, $to-a));
			background-image: -ms-linear-gradient($origin, rgba($from-r, $from-g, $from-b, $from-a), rgba($to-r, $to-g, $to-b, $to-a));
			background-image: linear-gradient($origin, rgba($from-r, $from-g, $from-b, $from-a), rgba($to-r, $to-g, $to-b, $to-a));
		}

		@mixin gradient-radial($shape: circle, $from: #FFF, $to: #000) {
			background-image: -webkit-radial-gradient($shape, $from, $to);
			background-image: -moz-radial-gradient($shape, $from, $to);
			background-image: -o-radial-gradient($shape, $from, $to);
			background-image: radial-gradient($shape, $from, $to);
		}

		@mixin gradient-radial-alpha($shape: circle, $from-r: 255, $from-g: 255, $from-b: 255, $from-a: 1, $to-r: 0, $to-g: 0, $to-b: 0, $to-a: 1) {
			background-image: -webkit-radial-gradient($shape, rgba($from-r, $from-g, $from-b, $from-a), rgba($to-r, $to-g, $to-b, $to-a));
			background-image: -moz-radial-gradient($shape, rgba($from-r, $from-g, $from-b, $from-a), rgba($to-r, $to-g, $to-b, $to-a));
			background-image: -o-radial-gradient($shape, rgba($from-r, $from-g, $from-b, $from-a), rgba($to-r, $to-g, $to-b, $to-a));
			background-image: radial-gradient($shape, rgba($from-r, $from-g, $from-b, $from-a), rgba($to-r, $to-g, $to-b, $to-a));
		}

	// Opacity
		@mixin opacity($opacity: .5) {
			-webkit-opacity: $opacity;
			-khtml-opacity: $opacity;
			-moz-opacity: $opacity;
			-ms-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=" $opacity * 100 ")";
			filter: alpha(opacity=$opacity * 100);
			opacity: $opacity;
		}

	// Transition
		@mixin transition($prop: all, $time: .2s, $ease: ease-in-out) {
			-webkit-transition: $prop $time $ease;
			-moz-transition: $prop $time $ease;
			-o-transition: $prop $time $ease;
			-ms-transition: $prop $time $ease;
			transition: $prop $time $ease;
		}

		@mixin transition-none($prop: none) {
			-webkit-transition: $prop;
			-moz-transition: $prop;
			-o-transition: $prop;
			-ms-transition: $prop;
			transition: $prop;
		}

	// Transform
		@mixin transform-all($rotate: 0deg, $scale: 1, $skew-x: 0deg, $skew-y: 0deg, $translate-x: 0px, $translate-y: 0px) {
			-webkit-transform: rotate($rotate) scale($scale) skewX($skew-x) skewY($skew-y) translateX($translate-x) translateY($translate-y);
			-moz-transform: rotate($rotate) scale($scale) skewX($skew-x) skewY($skew-y) translateX($translate-x) translateY($translate-y);
			-o-transform: rotate($rotate) scale($scale) skewX($skew-x) skewY($skew-y) translateX($translate-x) translateY($translate-y);
			-ms-transform: rotate($rotate) scale($scale) skewX($skew-x) skewY($skew-y) translateX($translate-x) translateY($translate-y);
			transform: rotate($rotate) scale($scale) skewX($skew-x) skewY($skew-y) translateX($translate-x) translateY($translate-y);
		}

	// Rotate
		@mixin rotate($rotate: 0deg) {
			-webkit-transform: rotate($rotate);
			-moz-transform: rotate($rotate);
			-o-transform: rotate($rotate);
			-ms-transform: rotate($rotate);
			transform: rotate($rotate);
		}

	// Scale
		@mixin scale($scale: 1) {
			-webkit-transform: scale($scale);
			-moz-transform: scale($scale);
			-o-transform: scale($scale);
			-ms-transform: scale($scale);
			transform: scale($scale);
		}
			
		@mixin scale-origin($scale: 1, $x: 0, $y: 0) {
			-webkit-transform: scale($scale);
			-webkit-transform-origin: $x $y;
			-moz-transform: scale($scale);
			-moz-transform-origin: $x $y;
			-o-transform: scale($scale);
			-o-transform-origin: $x $y;
			-ms-transform: scale($scale);
			-ms-transform-origin: $x $y;
			transform: scale($scale);
			transform-origin: $x $y;
		}

	// Skew
