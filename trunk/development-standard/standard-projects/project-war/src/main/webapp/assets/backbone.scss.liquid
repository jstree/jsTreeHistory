	// Content Selection
		@function content-selection-color($color) {
			@return if(lightness($color) >= 70, #000, #FFF);
		}

		@function content-selection-text-shadow($color) {
			@return if(lightness($color) < 70, 1px 1px 0 #000, 1px 1px 0 #FFF);
		}


