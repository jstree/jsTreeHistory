			border-right-width: $grid-boxed-border-right-size;
			border-bottom-width: $grid-boxed-border-bottom-size;
			border-left-width: $grid-boxed-border-left-size;
			@include border-radius-each($grid-boxed-border-top-left-radius, $grid-boxed-border-top-right-radius, $grid-boxed-border-bottom-right-radius, $grid-boxed-border-bottom-left-radius);
			background: $grid-boxed-background-color;

			.page-link {
				display: inline-block;
				@include dimensions(40px, 40 - $grid-boxed-border-top-size - $grid-boxed-border-bottom-size);
				border-right-width: $grid-boxed-border-top-size;
				border-right-style: $grid-boxed-border-style;
				border-right-color: $grid-boxed-border-color;
				background: $grid-boxed-background-color;
				background: $grid-boxed-background-color;
				line-height: 40 - $grid-boxed-border-top-size - $grid-boxed-border-bottom-size;
				@include transition();
				float: left;

				&:hover {
					background: darken($grid-boxed-background-color, 5%);
					color: $link-color;
				}

				&.void-link:hover {
					background: $grid-boxed-background-color;
					color: $body-font-color;
				}

				&.active { font-weight: bold; }

				&.next { border-right-width: 0; }
			}
		}
