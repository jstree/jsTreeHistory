//	#Footer
//	==================================================

	$footer-header-font-color: {{ settings.footer_header_font_color }};
	{% if settings.footer_header_font_web_safe == '' %}
		$footer-header-font-family: {{ settings.footer_header_font_google }}, {{ settings.footer_header_font_google }};
	{% else %}
		$footer-header-font-family: {{ settings.footer_header_font_web_safe }};
	{% endif %}
	$footer-header-font-size: {{ settings.footer_header_font_size }};
	$footer-header-font-weight: {{ settings.footer_header_font_weight }};
	$footer-link-color: {{ settings.footer_link_color }};
	$footer-link-color-hover: {{ settings.footer_link_color_hover }};

	#footer {
		color: $body-font-color;
		position: relative;
		z-index: 99;

		#columns {
			border-top: 1px solid $horizontal-line-color;
			border-bottom: 1px solid $horizontal-line-color;

			.title {
				color: $footer-header-font-color;
				font-family: $footer-header-font-family;
				font-size: $footer-header-font-size;
				font-weight: $footer-header-font-weight;
			}

			#newsletter {
				input {
					display: inline-block;
					width: 100%;
					margin-right: -40px;
					float: left;
				}

				button {
					@include dimensions(38px, 38px);
					border: 0;
					background: $input-background-color;
					color: $input-font-color;
					min-width: 38px;
					min-height: 38px;
					font-size: 1.1em;
					position: relative;
					top: 1px;
					float: left;

					&:hover {
						color: $primary-color;
					}
				}
			}

			#social {
				#social-icons {
					span {
						display: inline-block;
						@include dimensions(36px, 36px);
						text-align: center;
						line-height: 36px;

						a {
							display: block;
							@include dimensions(100%, 100%);
							border: 1px solid $footer-link-color;
							@include border-radius(100%);
							background: $body-background-color;
							color: $footer-link-color;
							font-size: 1.1em;
							@include transition();

							&:hover {
								background: $footer-link-color;
								color: $body-background-color;
							}
						}
					}
				}
			}

			#link-list {
				li {
					padding-left: 10px;

					a {
						display: block;
						@include dimensions(100%, 100%);
						padding-left: 0;
						color: $footer-link-color;
						@include transition();
						
						&:hover {
							padding-left: 5px;
							color: $footer-link-color-hover;
						}

						i {
							margin: 0 10px 0 0;
							color: $footer-link-color-hover;
						}
					}
				}
			}
		}

		#copyright {
			padding: 40px 0;
			line-height: 30px;

			a {
				color: $body-font-color;

				&:hover { color: $footer-link-color-hover; }
			}
		}

		#accepted-cards {
			padding: 40px 0;
			text-align: right;

			span {
				display: inline-block;
				margin-top: 5px;

				img {
					display: block;
					@include dimensions(32px, 20px);
					margin: 0 0 0 4px;
				}
			}
		}
	}

	@media #{$desktop-tablet} {
		#footer {
			#copyright {
				padding: 40px 0 0;
				text-align: center;
			}

			#accepted-cards {
				padding: 20px 0 40px;
				text-align: center;
			}
		}
	}


