/*  #Checkout
//  ================================================================================== */

	/* General */

		*, *:before, *:after {
			-moz-box-sizing: border-box;
			-webkit-box-sizing: border-box;
			box-sizing: border-box;
		}

		p { margin: 0 0 20px; }

		a,
		a:hover,
		a:focus {
			color: {{ settings.link_color }};
			font-weight: inherit;
			text-decoration: none;
		}

		a:hover { text-decoration: underline; }

		b, strong { font-weight: 700; }

		hr {
			margin: 0 0 20px;
			border: 0;
			border-bottom: {{ settings.horizontal_rule_size }}px {{ settings.horizontal_rule_style }} {{ settings.horizontal_rule_color }};
			clear: both;
		}

		h1, h2, h3, h4, h5, h6 {
			margin: 0 0 20px;
			padding: 0;
			color: {{ settings.checkout_headers_color }};
			font-family: inherit;
			font-weight: 400;
			font-variant: normal;
			text-transform: none;
			line-height: normal;
			letter-spacing: 0;
		}

		h1 { font-size: 2em; }
		h2 { font-size: 1.8em; }
		h3 { font-size: 1.6em; }
		h4 { font-size: 1.4em; }
		h5 { font-size: 1.2em; }
		h6 { font-size: 1.1em; }

		label { cursor: pointer; }

		input[type="text"],
		input[type="password"],
		input[type="email"],
		input[type="search"],
		input[type="tel"],
		input[type="url"],
		input[type="number"],
		input[type="file"],
		select,
		textarea {
			width: 100% !important;
			height: 30px;
			outline: none;
			margin: 0 0 20px 0;
			border: 1px solid {{ settings.checkout_form_border_color }};
			-webkit-border-top-left-radius: {{ settings.input_border_radius_top_left }}px;
			-webkit-border-top-right-radius: {{ settings.input_border_radius_top_right }}px;
			-webkit-border-bottom-right-radius: {{ settings.input_border_radius_bottom_right }}px;
			-webkit-border-bottom-left-radius: {{ settings.input_border_radius_bottom_left }}px;
			-moz-border-top-left-radius: {{ settings.input_border_radius_top_left }}px;
			-moz-border-top-right-radius: {{ settings.input_border_radius_top_right }}px;
			-moz-border-bottom-right-radius: {{ settings.input_border_radius_bottom_right }}px;
			-moz-border-bottom-left-radius: {{ settings.input_border_radius_bottom_left }}px;
			border-top-left-radius: {{ settings.input_border_radius_top_left }}px;
			border-top-right-radius: {{ settings.input_border_radius_top_right }}px;
			border-bottom-right-radius: {{ settings.input_border_radius_bottom_right }}px;
			border-bottom-left-radius: {{ settings.input_border_radius_bottom_left }}px;
			padding: 6px;
			background: {{ settings.checkout_form_bg_color }};
			color: {{ settings.checkout_form_font_color }};
		}
			
		input[type="checkbox"],
		input[type="radio"] {
			margin: 0 5px 0 0;
			position: relative;
			top: 2px;
		}

		button,
		.button,
		a.button,
		input[type="submit"],
		input[type="reset"],
		input[type="button"] {
			display: inline-block;
			min-width: 125px;
			min-height: 30px;
			margin: 0 0 20px;
			outline: none;
			border: 1px {{ settings.button_border_style }} {{ settings.button_border_color }};
			border-top-width: {{ settings.button_border_top_size }}px;
			border-right-width: {{ settings.button_border_right_size }}px;
			border-bottom-width: {{ settings.button_border_bottom_size }}px;
			border-left-width: {{ settings.button_border_left_size }}px;
			-webkit-border-top-left-radius: {{ settings.button_border_top_left_radius }}px;
			-webkit-border-top-right-radius: {{ settings.button_border_top_right_radius }}px;
			-webkit-border-bottom-right-radius: {{ settings.button_border_bottom_right_radius }}px;
			-webkit-border-bottom-left-radius: {{ settings.button_border_bottom_left_radius }}px;
			-moz-border-top-left-radius: {{ settings.button_border_top_left_radius }}px;
			-moz-border-top-right-radius: {{ settings.button_border_top_right_radius }}px;
			-moz-border-bottom-right-radius: {{ settings.button_border_bottom_right_radius }}px;
			-moz-border-bottom-left-radius: {{ settings.button_border_bottom_left_radius }}px;
			border-top-left-radius: {{ settings.button_border_top_left_radius }}px;
			border-top-right-radius: {{ settings.button_border_top_right_radius }}px;
			border-bottom-right-radius: {{ settings.button_border_bottom_right_radius }}px;
			border-bottom-left-radius: {{ settings.button_border_bottom_left_radius }}px;
			padding: 10px !important;
			background: {{ settings.button_bg_color }};
			color: {{ settings.button_font_color }};
			font-family: 'PT Sans', Arial, 'Times New Roman', Times, serif;
			font-size: normal;
			font-weight: normal !important;
			font-variant: normal;
			text-align: center;
			text-transform: uppercase;
			letter-spacing: 0em;
			line-height: normal;
		}

		html { height: 100%; }

		body {
			min-width: 300px;
			height: 100%;
			margin: 0;
			padding: 0;
			background: {{ settings.bg_color }};
			color: {{ settings.checkout_font_color }};
			font-family: 'PT Sans', Arial, 'Times New Roman', Times, serif;
			font-size: 1em;
			font-weight: 400;
			line-height: 1.8em;
			letter-spacing: 0;
			overflow-x: hidden;
		}

	/* Container */

		#container {
			display: block;
			width: 940px;
			min-width: 280px;
			min-height: 1px;
			margin: 20px auto;
			position: relative;
		}

		#container:after {
			display: block;
			width: 0;
			height: 0;
			overflow: hidden;
			clear: both;
			visibility: hidden;
			content: " ";
		}

		#wallet-highlight {
			background: {{ settings.checkout_highlight_color }};
		}

	/* Header */

		#header {
			width: 100%;
			border: 1px {{ settings.grid_boxed_border_style }} {{ settings.grid_boxed_border_color }};
			border-top-width: {{ settings.grid_boxed_border_top_size }}px;
			border-right-width: {{ settings.grid_boxed_border_right_size }}px;
			border-bottom-width: 0;
			border-left-width: {{ settings.grid_boxed_border_left_size }}px;
			-webkit-border-top-left-radius: {{ settings.grid_boxed_border_top_left_radius }}px;
			-webkit-border-top-right-radius: {{ settings.grid_boxed_border_top_right_radius }}px;
			-webkit-border-bottom-right-radius: 0;
			-webkit-border-bottom-left-radius: 0;
			-moz-border-top-left-radius: {{ settings.grid_boxed_border_top_left_radius }}px;
			-moz-border-top-right-radius: {{ settings.grid_boxed_border_top_right_radius }}px;
			-moz-border-bottom-right-radius: 0;
			-moz-border-bottom-left-radius: 0;
			border-top-left-radius: {{ settings.grid_boxed_border_top_left_radius }}px;
			border-top-right-radius: {{ settings.grid_boxed_border_top_right_radius }}px;
			border-bottom-right-radius: 0;
			border-bottom-left-radius: 0;
			padding: 20px;
			{% if settings.grid_boxed_bg_color_transparent %}
				background: transparent;
			{% else %}
				background: {{ settings.grid_boxed_bg_color }};
			{% endif %}
		}


		{% if settings.use_logo and settings.use_checkout_logo %}
			.step1 #header #logo,
			.step2 #header #logo {
				height: 80px;
				margin-bottom: 20px;
				background: url("{{ 'logo.png' | asset_url }}") no-repeat center;
			}

			.step1 #header #tagline,
			.step2 #header #tagline { display: none; }
		{% else %}
			.step1 #header #logo,
			.step2 #header #logo { display: none; }

			.step1 #header #tagline,
			.step2 #header #tagline {
				display: block;
				padding: 0 20px;
				background: transparent;
				line-height: 80px;
			}

			.step1 #header #tagline:after,
			.step2 #header #tagline:after {
				display: block;
				width: 0;
				height: 0;
				overflow: hidden;
				clear: both;
				visibility: hidden;
				content: " ";
			}

			.step1 #header #tagline .title,
			.step2 #header #tagline .title {
				color: {{ settings.logo_font_color }};
				{% if settings.logo_font_web_safe == '' %}
					font-family: {{ settings.logo_font_google }}, {{ settings.logo_font_google_type }};
				{% else %}
					font-family: {{ settings.logo_font_web_safe }};
				{% endif %}
				font-weight: {{ settings.logo_font_weight }};
				float: left;
			}

			.step1 #header #tagline .subtitle,
			.step2 #header #tagline .subtitle {
				color: {{ settings.header_font_color }};
				text-transform: uppercase;
				float: right;
			}
		{% endif %}

	/* Main */

		#main {
			width: 100%;
			border: 1px {{ settings.grid_boxed_border_style }} {{ settings.grid_boxed_border_color }};
			border-top-width: 0;
			border-right-width: {{ settings.grid_boxed_border_right_size }}px;
			border-bottom-width: 0;
			border-left-width: {{ settings.grid_boxed_border_left_size }}px;
			padding: 0 20px;
			{% if settings.grid_boxed_bg_color_transparent %}
				background: transparent;
			{% else %}
				background: {{ settings.grid_boxed_bg_color }};
			{% endif %}
		}

		#main:after {
			display: block;
			width: 0;
			height: 0;
			overflow: hidden;
			clear: both;
			visibility: hidden;
			content: " ";
		}

		/* Overview */

			#main #overview {
				width: 25%;
				border: 0;
				padding: 212px 0 10px 0;
				background: none;
				position: relative;
				float: left;
			}

			#main #overview:after {
				display: block;
				width: 0;
				height: 0;
				overflow: hidden;
				clear: both;
				visibility: hidden;
				content: " ";
			}

			#main #overview #products {
				width: 100%;
				border: 0;
			}

			#main #overview #products:after {
				display: block;
				width: 0;
				height: 0;
				overflow: hidden;
				clear: both;
				visibility: hidden;
				content: " ";
			}

			#main #overview #products h2 { display: none; }

			#main #overview #thumbs,
			#main #overview #products #thumbs {
				margin-top: 0;
				border-collapse: collapse;
			}

			#main #overview #thumbs td,
			#main #overview #products #thumbs td {
				padding: 5px;
				text-align: center;
				vertical-align: top;
			}

			#main #overview #products #thumbs td br { display: none; }

			#main #overview #products #thumbs td .plist-variant-title,
			#main #overview #products #thumbs td .plist-line-price {
				display: block;
				color: inherit;
			}

			#main #overview #products #thumbs td .plist-line-price { margin-bottom: 10px; }

			#main #overview #products #thumbs td div {
				width: 100% !important;
				margin: 0 0 10px 0;
				border: 0;
				padding: 0;
			}

			#main #overview #wallet {
				width: 100%;
				margin: 0;
				padding: 0;
				position: absolute;
				top: 0;
			}

			#main #overview #wallet #cost {
				margin-bottom: 0;
				color: {{ settings.checkout_primary_color }};
				font-family: inherit;
				text-shadow: none;
			}

			#main #overview #wallet br { display: none; }

			#main #overview #wallet .hint {
				display: block;
				color: {{ settings.checkout_secondary_color }};
				font-family: inherit;
				font-size: 100%;
				font-style: normal;
			}

			#main #overview #wallet #steps {
				display: block;
				margin-bottom: 20px;
				color: {{ settings.checkout_font_color }};
				font-family: inherit;
				font-size: 130%;
				font-style: normal;
				text-transform: uppercase;
			}

		/* Content */

			#main #content {
				width: 75%;
				padding: 0 0 0 20px;
				float: right;
			}

			#main #content #buttons {
				margin: 0;
				border: 0;
				padding: 0;
				background: none;
			}

			#main #content #buttons #commit-button {
				margin-bottom: 20px;
			}

			#main #content #buttons #cancel-purchase {
				display: inline-block;
				margin-bottom: 20px;
				margin-left: 5px;
				text-transform: uppercase;
			}

			#main #content #buttons #purchase-progress {
				position: relative;
				top: -25px;
			}

			/* Step One */

				#main #content #email {
					margin: 0;
					border: 0;
					padding: 0;
					background: none;
					line-height: normal;
				}

				#main #content #email label {
					padding-bottom: 10px;
					border-bottom: 1px dotted {{ settings.horizontal_rule_color }};
					color: {{ settings.checkout_headers_color }};
					font-family: inherit;
					font-size: 1.6em;
					font-weight: 400;
					text-transform: uppercase;
				}

				#main #content #email input { font-size: inherit; }

				#main #content #email .sign-in-message {
					display: block;
					margin-bottom: 40px;
					margin-left: 0;
					font-size: inherit;
					text-alinn: right;
				}

				#main #content #email .active-customer {
					margin: 0 0 40px 0;
					color: inherit;
					font-family: inherit;
					font-size: 1em;
				}

				#main #content #email .active-customer span {
					display: block;
					margin: 5px 0 0 0;
					font-size: 80%;
				}

				#main #content #email .active-customer span a {
					margin-left: 5px;
				}

				#main #content form #email .field-with-errors {
					background: none;
					border: 0;
					padding: 0;
				}

				#main #content form #email .field-with-errors .error-message,
				#main #content form #email .field-with-errors br { display: none; }

				#main #content form #email .field-with-errors input,
				#main #content form #email .field-with-errors select { border-color: #BD4A3E; }

				#main #content .group {
					margin: 0;
					border: 0;
					padding: 0;
					background: none;
				}

				#main #content .group:after {
					display: block;
					width: 0;
					height: 0;
					overflow: hidden;
					clear: both;
					visibility: hidden;
					content: " ";
				}

				#main #content .group .gleft {
					width: 50%;
					margin-bottom: 40px;
					padding-right: 10px;
				}

				#main #content .group .gright {
					width: 50%;
					margin-bottom: 40px;
					margin-left: 50%;
				}

				#main #content .group h3 {
					margin-bottom: 20px;
					padding-bottom: 10px;
					border-bottom: 1px dotted {{ settings.horizontal_rule_color }};
					color: {{ settings.checkout_headers_color }};
					font-size: 1.6em;
					font-weight: 300;
					text-transform: uppercase;
				}

				#main #content .form { width: 100%; }

				#main #content .form .multiple_address_selection td,
				#main #content .form .multiple_address_selection select { width: 100% !important; }

				#main #content .form td {
					display: list-item;
					width: 100% !important;
					padding: 0;
					line-height: 30px;
					list-style-type: none;
					float: left;
				}

				#main #content .form td.lbl label {
					font-size: 110%;
					font-weight: normal;
				}

				#main #content .form td .inline:after {
					display: block;
					width: 0;
					height: 0;
					overflow: hidden;
					clear: both;
					visibility: hidden;
					content: " ";
				}

				#main #content .form td .inline li { width: 100% !important; }

				#main #content .form td .inline li label {
					width: 100%;
					display: inline-block;
					padding: 0 10px 0 0;
					font-size: 110%;
					font-weight: normal;
					text-overflow: ellipsis;
					white-space: nowrap;
					overflow: hidden;
					float: left;
				}

				#main #content .form td .inline li input[type="text"],
				#main #content .form td .inline li input[type="password"],
				#main #content .form td .inline li input[type="email"],
				#main #content .form td .inline li input[type="search"],
				#main #content .form td .inline li input[type="tel"],
				#main #content .form td .inline li input[type="url"],
				#main #content .form td .inline li input[type="number"],
				#main #content .form td .inline li input[type="file"],
				#main #content .form td .inline li select,
				#main #content .form td .inline li textarea { width: 100% !important; }

				#main #content .form td .field-with-errors {
					background: none;
					border: 0;
					padding: 0;
				}

				#main #content .form td .field-with-errors .error-message,
				#main #content .form td .field-with-errors br { display: none; }

				#main #content .form td .field-with-errors input,
				#main #content .form td .field-with-errors select { border-color: #BD4A3E; }

				#main #content .group #billing-is-shipping { text-align: right; }

				#main #content .group #billing-is-shipping td { padding-bottom: 0; }

				#main #content .group #billing-is-shipping td label { line-height: normal; }

				#main #content .group #shipping-same {
					min-height: 28px;
					padding: 0;
					line-height: 28px;
				}

			/* Step Two */

				#main #content #discounts-body-link {
					margin-bottom: 40px;
					color: {{ settings.link_color }};
					text-decoration: none !important;
				}

				#main #content #discounts-body-link:hover { text-decoration: underline !important; }

				#main #content #discounts-body { margin-bottom: 20px; }

				#main #content #discounts-body input { float: right; }

				#main #content #discounts { margin-bottom: 20px; }

				#main #content #payment { margin-bottom: 20px; }

				#main #content #payment-method .severe-error {
					margin: 40px 0;
					border-color: {{ settings.checkout_error_box_border_color }};
					padding: 10px;
					background: {{ settings.checkout_error_box_bg_color }};
					color: {{ settings.checkout_error_box_font_color }}
				}

				#main #content #payment-method .severe-error p { margin: 0; }

				#main #content #payment-method #payment-methods li { margin-bottom: 10px; }

				#main #content #payment-method #payment-methods li label {
					display: block;
					width: 100%;
				}

				#main #content #payment-method #credit-card-info table { width: 100%; }

				#main #content #payment-method #credit-card-info table td .hint {
					display: block;
					color: {{ settings.link_color }};
					text-align: right;
					text-transform: uppercase;
				}

				#main #content #payment-method #credit-card-info table td .hint a { color: {{ settings.link_color }}; }

				#main #content #payment-method #credit-card-info table .field-with-errors {
					background: none;
					border: 0;
					padding: 0;
				}

				#main #content #payment-method #credit-card-info table .field-with-errors .error-message,
				#main #content #payment-method #credit-card-info table .field-with-errors br { display: none; }

				#main #content #payment-method #credit-card-info table .field-with-errors input,
				#main #content #payment-method #credit-card-info table .field-with-errors select { border-color: #BD4A3E; }

				#main #content #newsletter { margin-bottom: 20px; }

	/* Footer */

		#footer {
			width: 100%;
			border: 1px {{ settings.grid_boxed_border_style }} {{ settings.grid_boxed_border_color }};
			border-top-width: {{ settings.grid_boxed_border_top_size }}px;
			border-right-width: {{ settings.grid_boxed_border_right_size }}px;
			border-bottom-width: {{ settings.grid_boxed_border_bottom_size }}px;
			border-left-width: {{ settings.grid_boxed_border_left_size }}px;
			-webkit-border-top-left-radius: 0;
			-webkit-border-top-right-radius: 0;
			-webkit-border-bottom-right-radius: {{ settings.grid_boxed_border_bottom_right_radius }}px;
			-webkit-border-bottom-left-radius: {{ settings.grid_boxed_border_bottom_left_radius }}px;
			-moz-border-top-left-radius: 0;
			-moz-border-top-right-radius: 0;;
			-moz-border-bottom-right-radius: {{ settings.grid_boxed_border_bottom_right_radius }}px;
			-moz-border-bottom-left-radius: {{ settings.grid_boxed_border_bottom_left_radius }}px;
			border-top-left-radius: 0;
			border-top-right-radius: 0;
			border-bottom-right-radius: {{ settings.grid_boxed_border_bottom_right_radius }}px;
			border-bottom-left-radius: {{ settings.grid_boxed_border_bottom_left_radius }}px;
			padding: 20px;
			{% if settings.grid_boxed_bg_color_transparent %}
				background: transparent !important;
			{% else %}
				background: {{ settings.grid_boxed_bg_color }} !important;
			{% endif %}
			text-align: center;
		}

	/* Slim */

		.slim#container {
			width: 420px;
			padding: 0 20px;
			text-align: center;
		}

		.slim#container #header {
			width: 100%;
			background: {{ settings.grid_boxed_bg_color }};
			text-align: center;
		}

		.slim#container #header #tagline span {
			display: block;
		}

		.slim#container #main {
			width: 100%;
			padding: 0 20px;
			background: {{ settings.grid_boxed_bg_color }};
			text-align: center;
		}

		.slim#container #main #content {
			width: 100%;
			padding: 0;
			text-align: center;
		}

		.slim#container #main #content .loading-spinner {
			display: block;
			margin: 0 0 20px 0!important;
			float: none !important;
		}

		.slim#container #main #overview {
			padding-top: 0;
		}

		.slim#container #main #overview #thumbs {
			margin-top: 0;
		}

		.slim#container #main #overview h2 {
			display: none;
		}

		.slim#container #main #overview #thumbs .plisthead span {
			color: {{ settings.checkout_font_color }};
		}

		.slim#container #footer {
			width: 100%;
			border-top: 0;
			background: {{ settings.grid_boxed_bg_color }};
			text-align: center;
		}

	/* Media Queries */
	
		@media only screen and (min-width: 1200px) {
			#container { width: 1180px; }
		}

		@media only screen and (max-width: 979px) {
			#container { width: 748px; }

			#main #content .group .gleft {
				width: 100%;
				padding-right: 0;
				float: none;
			}

			#main #content .group .gright {
				width: 100%;
				margin-left: 0;
				padding-left: 0;
				float: none;
			}
		}

		@media only screen and (max-width: 767px) {
			#container {
				width: 100%;
				padding: 0 20px;
			}

			.step1 #header #logo,
			.step2 #header #logo {
				background: {{ settings.header_bg_color }} url("{{ 'logo.png' | asset_url }}") no-repeat center;
			}

			#main #overview {
				width: 100%;
				padding-right: 0;
				float: none;
			}

			#main #content {
				width: 100%;
				padding-left: 0;
				float: none;
			}

			.slim#container {
				width: 100%;
				padding: 0 20px;
			}

			#main #content #buttons { text-align: center; }
		}

		@media only screen and (max-width: 479px) {
			.step1 #header #tagline,
			.step2 #header #tagline { text-align: center; }

			.step1 #header #tagline .title,
			.step2 #header #tagline .title { float: none; }

			.step1 #header #tagline .subtitle,
			.step2 #header #tagline .subtitle { display: none; }
		}