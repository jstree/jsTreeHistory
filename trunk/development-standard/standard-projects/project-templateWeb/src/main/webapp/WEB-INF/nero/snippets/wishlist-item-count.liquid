	{% comment %} Wishlist Item Count {% endcomment %}

		{% assign tag_array = null %}
		{% assign wishlist_item_count = 0 %}

		{% for current_tag in customer.tags %}
			{% assign tag_counter = 0 %}
			{% assign modulo = 0 %}

			{% if current_tag contains 'ce-wishlist' %}
				{% assign current_tag = current_tag | remove: 'x' %}

				{% unless tag_array contains current_tag %}
					{% for tag in customer.tags %}
						{% if tag contains current_tag %}
							{% assign tag_counter = tag_counter | plus:1 | money_without_currency | times:100 %}
						{% endif %}
					{% endfor %}

					{% capture modulo %}{{ tag_counter | divided_by: 2 }}{% endcapture %}

					{% if modulo contains ".5" %}
						{% assign wishlist_item_count = wishlist_item_count | plus:1 %}
					{% else %}
						{% assign wishlist_item_count = wishlist_item_count | minus:1 %}
					{% endif %}

					{% capture tag_array %}{{ current_tag }}|{% endcapture %}
				{% endunless %}
			{% endif %}
		{% endfor %}