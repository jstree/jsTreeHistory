					{% endif %}
					{% if settings.footer_dribbble != blank %}
						<span class="tip-t-fade" data-tooltip="Dribbble"><a href="{{ settings.footer_dribbble }}" target="_self"><i class="fa fa-dribbble fa-fw"></i></a></span>
					{% endif %}
					{% if settings.footer_linkedin != blank %}
						<span class="tip-t-fade" data-tooltip="LinkedIn"><a href="{{ settings.footer_linkedin }}" target="_self"><i class="fa fa-linkedin fa-fw"></i></a></span>
