	{% comment %} Social {% endcomment %}

		<div id="social">
			<h4 class="title"><span>{{ settings.footer_social_title }}</span></h4>

			<div class="content">
				<p class="text">{{ settings.footer_social_text }}</p>

				<div id="social-icons">
					{% if settings.footer_facebook != blank %}
						<span class="tip-t-fade" data-tooltip="Facebook"><a href="{{ settings.footer_facebook }}" target="_self"><i class="fa fa-facebook fa-fw"></i></a></span>
					{% endif %}
					{% if settings.footer_twitter != blank %}
						<span class="tip-t-fade" data-tooltip="Twitter"><a href="{{ settings.footer_twitter }}" target="_self"><i class="fa fa-twitter fa-fw"></i></a></span>
					{% endif %}
					{% if settings.footer_google_plus != blank %}
						<span class="tip-t-fade" data-tooltip="Google+"><a href="{{ settings.footer_google_plus }}" target="_self"><i class="fa fa-google-plus fa-fw"></i></a></span>
					{% endif %}
					{% if settings.footer_vk != blank %}
						<span class="tip-t-fade" data-tooltip="VK"><a href="{{ settings.footer_vk }}" target="_self"><i class="fa fa-vk fa-fw"></i></a></span>
					{% endif %}
					{% if settings.footer_pinterest != blank %}
						<span class="tip-t-fade" data-tooltip="Pinterest"><a href="{{ settings.footer_pinterest }}" target="_self"><i class="fa fa-pinterest fa-fw"></i></a></span>
					{% endif %}
					{% if settings.footer_instagram != blank %}
						<span class="tip-t-fade" data-tooltip="Instagram"><a href="{{ settings.footer_instagram }}" target="_self"><i class="fa fa-instagram fa-fw"></i></a></span>
					{% endif %}
					{% if settings.footer_flickr != blank %}
						<span class="tip-t-fade" data-tooltip="Flickr"><a href="{{ settings.footer_flickr }}" target="_self"><i class="fa fa-flickr fa-fw"></i></a></span>
