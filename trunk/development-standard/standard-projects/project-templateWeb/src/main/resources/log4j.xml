		<level value="debug" />
	</logger>
		
	<!-- Application Loggers -->
	<logger name="standard.mvc.component.junit.redis">
		<level value="info" />
	</logger>
	
	<!-- 3rdparty Loggers -->
	<logger name="org.springframework.core">
		<level value="debug" />
	</logger>
	
	<logger name="org.springframework.beans">
		<level value="debug" />
	</logger>
	
	<logger name="org.springframework.context">
		<level value="debug" />
	</logger>

	<logger name="org.springframework.web">
		<level value="debug" />
	</logger>
	
	<logger name="org.springframework.data.redis">
